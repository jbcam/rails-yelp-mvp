<% reviews.each do |review| %>
  <div class="message">
    <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan">
    <div class="message-name">
      <h3>Gab Dehan</h3>
      <p>10/07/17</p>
    </div>
    <div class="message-body">
      <p>
        <strong>
          <% review.rating.times do %>
            <i class='fas fa-star'></i>
          <% end %>
        </strong>
      </p>
      <p>
        <%= review.content %>
      </p>
    </div>
  </div>
<% end %>
