<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://i.pinimg.com/originals/d2/6d/cc/d26dcc273b53786d5ed3762c74a6b23a.jpg');">
  <div class="banner-content">
    <h1>Yelp</h1>
    <p>Book the best restaurants</p>
    <!-- <a class="btn btn-primary btn-lg">Start now</a> -->
  </div>
</div>
<div class="container padded">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-3">
        <!-- insert <div class="card"> -->
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1540202404-69f85b6fd934?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=f32a6a0e6c12add815a8c5a3ff0476e5&auto=format&fit=crop&w=1387&q=80');">
          <div class="card-category">
            <% avg_rating(restaurant).times do %>
              <i class='fas fa-star'></i>
            <% end %>
          </div>
          <div class="card-description">
            <h2><%= restaurant.name %></h2>
            <p><%= restaurant.address %></p>
          </div>
          <%= link_to '', restaurant_path(restaurant), class: "card-link"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="wrapper">
  <div class="container padded">
    <div class="row">
      <div class="col-sm-4 offset-sm-4">
        <%= render 'restaurant_form', restaurant: @restaurant %>
      </div>
    </div>
  </div>
</div>

